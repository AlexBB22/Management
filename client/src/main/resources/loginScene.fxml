<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane fx:id="grid" alignment="center" hgap="10" prefHeight="400.0" prefWidth="600.0" styleClass="grid" stylesheets="@CSS/login.css" vgap="5.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nl.tudelft.oopp.controllers.LoginSceneController">
    <padding><Insets bottom="10" left="25" right="25" top="25" /></padding>

    <TextField fx:id="usernameField" promptText="Username" GridPane.rowIndex="2">
      <GridPane.margin>
         <Insets bottom="5.0" />
      </GridPane.margin></TextField>

    <PasswordField fx:id="passwordfield" promptText="Password" GridPane.rowIndex="4">
      <GridPane.margin>
         <Insets bottom="10.0" />
      </GridPane.margin></PasswordField>

    <!--This bit adds the button which triggers an event which is handled by the controller-->
    <HBox alignment="bottom_right" spacing="10" GridPane.rowIndex="5">
        <Button alignment="TOP_CENTER" onAction="#newUserButtonHandler" text="Create new user">
         <HBox.margin>
            <Insets />
         </HBox.margin></Button>
        <Button alignment="TOP_CENTER" layoutX="106.0" layoutY="10.0" onAction="#signInButtonHandler" text="Sign in" />
    </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
